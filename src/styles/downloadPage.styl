.download-page {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
  width: 100%;

  .box {
    width: unset;

    @media $tablet {
      width: 700px;
    }
  }

  form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    width: 100%;
  }

  .email {
    inputStyle();
    margin-top: 10px;
    color: white;
    letter-spacing: .1em;
    font-size: 16px;

    width: 95%;

    @media $tablet {
      width: 70%;
    font-size: 20px;
    }
  }

  #closeButton {
    position: absolute;
    align-self: flex-end;
    margin-top: -5px;
    margin-left: 10px;
    padding: 6px;
    border-color: $boxBorderColor;
    background-color: transparent;
    line-height: 9px;

    &:hover {
      background-color: $buttonHoverColor;
    }

    @media $tablet {
      margin-top: 0;
    }
  }
}