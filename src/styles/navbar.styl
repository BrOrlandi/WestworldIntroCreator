.kasselLogo {
  margin: 13px 0;
  img {
    height: 20px;
  }
}

$navbarBackgroundColor = #141414;
$kasselLabsFont = Lato, 'Helvetica Neue', Helvetica, Arial, sans-serif;
$linkColor = $white;
$menuColor = #2f3036;
$linkBackgroundColorHover = $menuColor;
$linkBackgroundColorSubmenu = darken($menuColor, 25%);

.navBar {
  min-height: 50px;
  background-color: $navbarBackgroundColor;
  font-family: $kasselLabsFont;

  .content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;

    .menu {
      display: none;

      @media $tablet {
        display: block;
      }
    }
  }

  .show-menu {
    @media $tablet {
      display: none;
    }

    input[type=checkbox]{
      display: none;
    }

    span {
      display: block;
      width: 22px;
      height: 2px;
      border-radius: 1px;
      background-color: $white;

      &:not(:first-child) {
        margin-top: 4px;
      }
    }
  }

  ul {
    margin: 0;
    padding: 0;
    list-style-type:none;
  }

  /*Display the dropdown on hover*/
  ul li a:hover + .dropdown, .dropdown:hover {
    display: flex;
    flex-direction: column;
  }

  li {
    display:inline-block;
    margin-right: 1px;
    cursor: pointer;

    width: 100%;

    @media $tablet {
      width: auto;
    }

    a {
      display: block;
      min-width: 170px;
      height: 50px;
      text-align: center;
      line-height: 50px;

      color: $linkColor;
      text-decoration: none;
    }

    &:hover {
      a {
        background: $linkBackgroundColorHover;
      }

      .dropdown {
        a {
          background-color: $linkBackgroundColorSubmenu;
          height: 40px;
          line-height: 40px;

          &:hover {
            background-color: $linkBackgroundColorHover;
          }
        }
      }
    }

    .dropdown {
      display: none;

      @media $tablet {
        position: absolute;
      }
    }
  }

}