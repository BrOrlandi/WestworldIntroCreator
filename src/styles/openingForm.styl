$inputBorderColor = $delosDarkBlue;
$inputBorderColorHover = lighten($delosDarkBlue, 25%);
$inputBorderColorFocus = lighten($delosDarkBlue, 40%);
$formBackgroundColor = lighten(black, 2%);

inputStyle() {

  $inputBorder = 3px solid $inputBorderColor;

  outline: 0;
  border: $inputBorder;
  border-radius: 3px;
  background-color: $formBackgroundColor;
  text-align: center;
  transition: border-color .3s ease-out;

  defaultTextStyle();

  &:hover{
    border-color: $inputBorderColorHover;
  }

  &:active, &:focus {
    border-color: $inputBorderColorFocus;
  }

  @media $tablet {
    padding: 4px;
  }
}

#opening-form {
  display: flex;

  form {
    z-index: 1;
    display: flex;
    justify-content: center;
    flex-direction: row;
    flex-wrap: wrap;

    textarea {
      overflow-x: hidden;
      margin-top: 2px;
      width: 95vw;
      color: white;
      word-break: break-word;
      font-size: 14px;
      resize: none;

      inputStyle();
    }

    #input-text28 {
      logoTextStyle();
      font-size: 1.5em;
    }
  }

  @media $tablet {
    width: 90vw;

    form {
      max-height: 70vh;

      textarea {
        flex-basis: 30%;
        margin: 10px 10px 0;
        min-width: 300px;
        max-width: 500px;
      }

      #input-text28 {
        logoTextStyle();
        font-size: 2em;
      }
    }
  }
}