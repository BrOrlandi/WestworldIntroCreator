$inputBorderColor = $delosDarkBlue;
$inputBorderColorHover = $delosLightBlue;
$inputBorderColorFocus = lighten($delosDarkBlue, 40%);
$formBackgroundColor = lighten(black, 2%);

inputStyle() {

  $inputBorder = 3px solid $inputBorderColor;

  outline: 0;
  border: $inputBorder;
  border-radius: 3px;
  background-color: $formBackgroundColor;
  text-align: center;
  transition: border-color .3s ease-out;

  defaultTextStyle();

  &:hover{
    border-color: $inputBorderColorHover;
  }

  &:active, &:focus {
    border-color: $inputBorderColorFocus;
  }

  @media tablet {
    padding: 4px;
  }
}

#opening-form {
  display: flex;
  flex-direction: column;
  align-items: center;

  form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .form-inputs {
    display: flex;
    justify-content: center;
    flex-direction: row;
    flex-wrap: wrap;

    textarea {
      overflow-x: hidden;
      margin-top: 2px;
      width: 95vw;
      color: white;
      word-break: break-word;
      font-size: 14px;
      resize: none;

      inputStyle();
    }

    #input-text28 {
      logoTextStyle();
      font-size: 1.5em;
    }
  }

  @media tablet {
    width: 90vw;

    .form-inputs {
      textarea {
        flex-basis: 30%;
        margin: 10px 10px 0;
        min-width: 300px;
        max-width: 500px;
      }

      #input-text28 {
        logoTextStyle();
        font-size: 2em;
      }
    }
  }
}

.info-box {
  defaultTextStyle();
  padding: 7px 7px 4px;
  border-radius: 5px;
  background-color: alpha($delosDarkBlue, 80%);
  text-align: center;
}

#play-button {
  margin-top: 30px;
}

.button {
  logoTextStyle();

  padding: 5px 15px;
  border: 1px solid $delosLightBlue;
  background-color: alpha($delosDarkBlue, 80%);
  color: white;
  cursor: pointer;
  transition: border-color, background-color .3s;

  &:hover {
    border-color: $inputBorderColorFocus;
    background-color: alpha($delosLightBlue, 80%);
  }

  &.big {
    font-size: 3em;
  }
}