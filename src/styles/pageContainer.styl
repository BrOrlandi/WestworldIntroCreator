.background-image {
  position: fixed;
  z-index: -1;
  width: 100%;
  height: 100%;
  background: url('../assets/img/background.jpg') $delosDarkBlue no-repeat center center fixed;
  filter: brightness(.5);
  background-size: cover;
}

.center-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.app-title {
  logoTextStyle();
  textOutline();
  margin: 16px 0;
}

.box-page {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
  width: 100%;

  .box {
    width: unset;

    @media $tablet {
      width: 700px;
    }
  }
}