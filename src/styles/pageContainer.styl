.background-image {
  position: fixed;
  z-index: -1;
  width: 100%;
  height: 100%;
  background: url('../assets/img/background.jpg') $delosDarkBlue no-repeat center center fixed;
  filter: brightness(.5);
  background-size: cover;
}

.center-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.app-title {
  logoTextStyle();
  textOutline();
}

.kasselLogo {
  padding: 1em 1em 0;
  text-align: center;

  @media $tablet {
    position: absolute;
  }

  img {
    height: 20px;
  }
}