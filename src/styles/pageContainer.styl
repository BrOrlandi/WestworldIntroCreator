.background-image {
  position: fixed;
  z-index: -1;
  width: 100%;
  height: 100%;
  background: url('../assets/img/background.jpg') $delosDarkBlue no-repeat center center fixed;
  filter: brightness(.5);
  background-size: cover;
}

.center-content {
  display: flex;
  flex-direction: column;
  align-items: center;

  &.horizontal {
    flex-direction: row;
    justify-content: center;
  }
}

.app-title {
  logoTextStyle();
  textOutline();
  margin: 16px 0;
}

.box-page {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
  width: 100%;

  .box {
    width: unset;

    @media $tablet {
      width: 700px;
    }
  }
}

.error-boundary {
  img {
    margin-bottom: 20px;
  }
}

.footer {
  margin-bottom: 5px;
  display: flex;
  align-items: center;
  flex-direction: column;

  .social-pages {
    margin-bottom: 10px;

    > a {
      margin-right: 10px;
      fill: white;

      &:hover {
        fill: lighten(#7fb7d5, 10); // like $buttonHoverColor
      }
    }

    svg {
      width: 40px;
    }
  }

  .fb-share-button, .twitter-share-button {
    margin-bottom: 10px;
  }

  @media $tablet {
    position: fixed;
    bottom: 0;
    left: 15px;
    flex-direction: row;

    .fb-share-button, .twitter-share-button {
      margin-right: 10px;
    }
  }
}