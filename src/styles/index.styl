@font-face {
  font-family: Avenir;
  src: url('./AvenirLTStd-Medium.ttf');
}

body {
  display: initial;
  background-color: black;
  color: white;
}

#app {
  position: absolute;
  width: 100%;
  height: 100%;
}

#application {
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 100%;
}

:-webkit-full-screen {
  background-color: black;
}

.video-container {
  position: relative;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  width: 100%;
}

.buttons-container{
  display: flex;
  justify-content: center;
}

.video-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  // background-color: rgba(255,255,255,.2);
  pointer-events: none;
}

.video-overlay__content {
  height: 100%;
  letter-spacing: .3em;
  font-family: Avenir;

  div {
    position: absolute;
    width: 100%;
    text-align: center;
  }
}