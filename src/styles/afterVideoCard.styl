

.after-video-card {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: calc(100% - 50px);

  .box {
    overflow-y: auto;
    margin-top: 20px;
    max-height: 90%;
  }
}

.box {
  box-sizing: border-box;
  margin-top: 20px;
  margin-bottom: 30px;
  padding: 10px 15px;
  max-width: 95%;
  width: 700px;

  border: 3px solid $boxBorderColor;
  border-radius: 5px;

  background-color: $boxBackgroundColor;

  defaultTextStyle();
  fontSizeResponsive();

  display: flex;
  flex-direction: column;
  align-items: center;

  .buttons {
    text-align: center;
  }

  .button {
    margin-top: 15px;

    &:last-child {
      margin-bottom: 15px;
    }
  }

  @media $tablet {
    max-width: 100%;
    padding: 20px 30px;

    .button {
      margin-top: 20px;

      &:last-child {
        margin-bottom: 20px;
      }
    }

  }
}