

.after-video-card {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: calc(100% - 50px);
}

.box {
  box-sizing: border-box;
  padding: 20px 30px;
  max-width: 95%;
  width: 700px;

  border: 3px solid $boxBorderColor;
  border-radius: 5px;

  background-color: $boxBackgroundColor;

  letter-spacing: .1em;
  font-size: 18px;
  font-family: $defaultFontFamily;

  display: flex;
  flex-direction: column;
  align-items: center;

  .buttons {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .button {
    margin-top: 20px;

    &:last-child {
      margin-bottom: 20px;
    }
  }
}