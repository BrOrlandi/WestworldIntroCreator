

.after-video-card {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: calc(100% - 50px);

  .box {
    box-sizing: border-box;
    padding: 30px;
    max-width: 95%;
    width: 500px;

    border: 3px solid $boxBorderColor;
    border-radius: 5px;

    background-color: $boxBackgroundColor;
    letter-spacing: .1em;
    font-family: $defaultFontFamily;

    display: flex;
    flex-direction: column;
    align-items: center;

    .button {
      margin-top: 20px;
    }
  }
}