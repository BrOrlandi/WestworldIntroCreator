::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background-color: darken($delosDarkBlue, 10%);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-color: lighten($delosDarkBlue, 10%);
    &:hover {
        background-color: lighten($delosDarkBlue, 20%);
    }
}