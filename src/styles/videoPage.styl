
#videoPage {
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 100%;
}

:-webkit-full-screen {
  background-color: black;
}

.video-container {
  position: relative;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  width: 100%;
  pointer-events: none;
}

.buttons-container{
  display: flex;
  justify-content: center;
  padding: 10px 0;
  background-color: #050505;
}

.video-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  // background-color: rgba(255,255,255,.2);
  // pointer-events: none;
}

.video-overlay__content {
  height: 100%;
  defaultTextStyle();

  div {
    position: absolute;
    display: none;
    // display: block;
    width: 100%;
    text-align: center;
    word-wrap: break-word;
  }
}

@import './animations';